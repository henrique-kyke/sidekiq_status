<h3 class="wi">Recent job statuses</h3>

<div class="delete_jobs">
  Delete jobs in&nbsp;
  <a href="<%= to(:statuses) %>/delete/complete" onclick="return confirm('Are you sure? Delete is irreversible')">
    complete
  </a>
  ,&nbsp;
  <a href="<%= to(:statuses) %>/delete/finished" onclick="return confirm('Are you sure? Delete is irreversible')" title="<%= SidekiqStatus::Container::FINISHED_STATUS_NAMES.join(', ') %>">
    finished
  </a>
  ,&nbsp;
  <a href="<%= to(:statuses) %>/delete/all"      onclick="return confirm('Are you sure? Delete is irreversible')">
    all
  </a>
  &nbsp;statuses
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th>Worker/jid</th>
    <th>Status</th>
    <th>Last Updated â††</th>
    <th>Progress</th>
    <th>Message</th>
    <th>Actions</th>
  </tr>
  <% @statuses.each do |container| -%>
    <tr>
      <td>
        <a href="<%= to(:statuses) %>/<%= container.jid %>">
          <%= container.worker %>
          <br />
          <%= container.jid %>
        </a>
      </td>
      <td><%= container.status %></td>
      <td><%= container.last_updated_at %></td>
      <td>
        <div class="progress progress-striped" style="margin-bottom: 0">
          <div class="bar" style="width: <%= container.pct_complete %>%; text-shadow: 1px 1px 1px black">
            <%= container.pct_complete %>%
          </div>
        </div>
      <td><%= container.message %></td>
      <td>
        <% if container.killable? -%>
          <a class="kill" href="<%= to(:statuses) %>/<%= container.jid %>/kill" onclick="return confirm('Are you sure?')">Kill</a>
        <% elsif container.kill_requested? -%>
          Kill requested
        <% end %>
      </td>
    </tr>
  <% end -%>
  <% if @statuses.empty? -%>
    <tr>
      <td colspan="6"></td>
    </tr>
  <% end -%>
</table>
<style type="text/css">
  .bar{
    background: #00aa00; /* Old browsers */
    background: -moz-linear-gradient(left,  #00aa00 0%, #00ff00 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, right top, color-stop(0%,#00aa00), color-stop(100%,#00ff00)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(left,  #00aa00 0%,#00ff00 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(left,  #00aa00 0%,#00ff00 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(left,  #00aa00 0%,#00ff00 100%); /* IE10+ */
    background: linear-gradient(to right,  #00aa00 0%,#00ff00 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00aa00', endColorstr='#00ff00',GradientType=1 ); /* IE6-8 */

  }
</style>


<%= erb :_paging, :locals => { :url => "#{root_path}statuses" } %>
